<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_iv_goods_width"
    android:layout_height="wrap_content"
    >
    <!-- Goods ImageView -->
    <ImageView
        android:id="@+id/iv_item_goods"
        android:layout_width="0dip"
        android:layout_height="0dip"
        tools:layout_height="194dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_percentage"
        />
    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="@dimen/iv_favorite_width"
        android:layout_height="@dimen/iv_favorite_height"
        android:src="@drawable/icon_zzim"
        app:layout_constraintTop_toTopOf="@id/iv_item_goods"
        app:layout_constraintEnd_toEndOf="@id/iv_item_goods"
        android:layout_marginTop="@dimen/margin_top_12dp"
        android:layout_marginRight="@dimen/margin_right_12dp"
        />
    <!-- Percentage TextView -->
    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/watermelon"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintTop_toBottomOf="@id/iv_item_goods"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/margin_left_2dp"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:textStyle="bold"
        android:letterSpacing="@dimen/letter_spacing_minus_3"
        tools:text="10%"
        />
    <!-- Price TextView -->
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_percentage"
        android:layout_marginLeft="@dimen/margin_left_4dp"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        tools:text="3,200"
        app:layout_constraintTop_toBottomOf="@id/iv_item_goods"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:letterSpacing="@dimen/letter_spacing_minus_3"
        />
    <!-- Product Name TextView -->
    <TextView
        android:id="@+id/tv_prd_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textColor="@color/brownish_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_percentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size_11sp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="가격 진정으로 실화인지 아닌지 궁금합니다."
        android:layout_marginLeft="@dimen/margin_left_2dp"
        android:layout_marginTop="@dimen/margin_top_4dp"
        android:layout_marginRight="@dimen/margin_right_14dp"
        />
    <!-- New Badge ImageView -->
    <ImageView
        android:id="@+id/iv_badge_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_prd_name"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_badge_new"
        android:layout_marginTop="@dimen/margin_top_8dp"
        />
    <!-- Now Purchasing TextView -->
    <TextView
        android:id="@+id/tv_now_purchasing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_badge_new"
        tools:text="1,023개 구매중"
        android:layout_marginLeft="@dimen/margin_left_5dp"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:textColor="@color/brownish_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_prd_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_bottom_21dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>